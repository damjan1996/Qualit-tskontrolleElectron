{
  "name": "wareneingang-rfid-qr",
  "version": "1.0.1",
  "description": "RFID Wareneingang System - Vereinfachte Desktop-Anwendung fÃ¼r Shirtful",
  "main": "main.js",
  "author": {
    "name": "Shirtful GmbH",
    "email": "support@shirtful.com",
    "url": "https://www.shirtful.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production FORCE_COLOR=1 electron .",
    "dev": "cross-env NODE_ENV=development FORCE_COLOR=1 electron .",
    "debug": "cross-env NODE_ENV=development DEBUG=true FORCE_COLOR=1 electron . --inspect=9229",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:frontend": "jest tests/frontend",
    "test:mocks": "jest tests/mocks",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:parallel": "jest --maxWorkers=4",
    "test:sequential": "jest --runInBand",
    "test:quick": "jest --testPathPattern=\"(unit|mocks)\" --passWithNoTests",
    "test:smoke": "jest --testNamePattern=\"should\" --passWithNoTests",
    "test:performance": "jest --testNamePattern=\"performance|stress|load\"",
    "test:clear-cache": "jest --clearCache",
    "test-quick": "node scripts/quick-test.js",
    "test-qr": "node scripts/test-qr-duplicates.js",
    "setup": "node setup.js",
    "setup-db": "node scripts/create-database.js",
    "setup-users": "node scripts/create-test-users.js",
    "test-db": "node scripts/test-db-connection.js",
    "test-db-quick": "node scripts/quick-db-test.js",
    "clean": "rimraf dist node_modules/.cache coverage",
    "clean:tests": "rimraf coverage .nyc_output test-results",
    "rebuild-safe": "electron-rebuild --force --only node-hid || echo 'Native module rebuild failed - app will work without RFID hardware'",
    "install-rebuild": "npm install && npm run rebuild-safe",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "precommit": "npm run lint && npm run test:quick",
    "prepush": "npm run test:ci",
    "validate": "npm run lint && npm run test:ci && npm run build"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mssql": "^10.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "rimraf": "^5.0.1",
    "@jest/test-sequencer": "^29.7.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporters": "^3.1.5",
    "jsdom": "^23.0.1",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0"
  },
  "optionalDependencies": {
    "node-hid": "^2.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "testIgnore": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/build/",
      "<rootDir>/release/"
    ],
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "collectCoverageFrom": [
      "main.js",
      "preload.js",
      "renderer/**/*.js",
      "rfid/**/*.js",
      "db/**/*.js",
      "utils/**/*.js",
      "!renderer/libs/**",
      "!**/*.config.js",
      "!**/*.mock.js",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      },
      "./db/": {
        "branches": 80,
        "functions": 85,
        "lines": 90,
        "statements": 90
      },
      "./rfid/": {
        "branches": 75,
        "functions": 80,
        "lines": 85,
        "statements": 85
      }
    },
    "moduleNameMapping": {
      "^electron$": "<rootDir>/tests/mocks/electron.mock.js",
      "^mssql$": "<rootDir>/tests/mocks/mssql.mock.js",
      "^node-hid$": "<rootDir>/tests/mocks/node-hid.mock.js"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testTimeout": 30000,
    "setupTimeout": 60000,
    "verbose": false,
    "clearMocks": true,
    "restoreMocks": true,
    "fakeTimers": {
      "enableGlobally": false
    },
    "errorOnDeprecated": true,
    "maxWorkers": "50%",
    "bail": false,
    "testSequencer": "<rootDir>/tests/setup/test-sequencer.js",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./coverage",
          "filename": "test-report.html",
          "expand": true,
          "hideIcon": false,
          "pageTitle": "RFID QR Wareneingang - Test Report"
        }
      ]
    ],
    "globals": {
      "NODE_ENV": "test",
      "MSSQL_SERVER": "localhost",
      "MSSQL_DATABASE": "RdScanner_Test",
      "MSSQL_USER": "test_user",
      "MSSQL_PASSWORD": "test_password"
    },
    "watchman": true,
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/coverage/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/build/",
      "/release/",
      "/coverage/"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "16"
          }
        }
      ]
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "ignorePatterns": [
      "dist/",
      "build/",
      "coverage/",
      "node_modules/"
    ]
  },
  "build": {
    "appId": "com.shirtful.wareneingang-rfid-qr",
    "productName": "Wareneingang RFID QR",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "rfid/**/*",
      "db/**/*",
      "utils/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{karma.conf.js,wallaby.js,wallaby.conf.js}",
      "!tests/**/*",
      "!coverage/**/*",
      "!scripts/test*",
      "!scripts/create-test*",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!jest.config.js",
      "!.eslintrc*",
      "!.prettierrc*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Shirtful GmbH",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RFID QR Wareneingang"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    }
  },
  "keywords": [
    "rfid",
    "qr-code",
    "wareneingang",
    "scanner",
    "inventory",
    "electron",
    "desktop-app",
    "shirtful"
  ],
  "homepage": "https://www.shirtful.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shirtful/wareneingang-rfid-qr.git"
  },
  "bugs": {
    "url": "https://github.com/shirtful/wareneingang-rfid-qr/issues"
  }
}